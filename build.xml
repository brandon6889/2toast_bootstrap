<project name="2toast bootstrap" default="dist" basedir=".">
  <description>
    2toast bootstrapper downloads the latest launcher and its dependencies
  </description>
  <property name="src" location="src"/>
  <property name="build" location="bin"/>
  <property name="dist" location="dist"/>
  <property name="lib" location="lib"/>

  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init" description="Compile the source">
    <javac srcdir="${src}" destdir="${build}" includeantruntime="false">
      <classpath path="libsrc"/>
    </javac>
  </target>

  <target name="dist" depends="compile" description="Generate the dist files">
    <jar jarfile="${dist}/2toast-bootstrap-${DSTAMP}.jar" basedir="${build}">
      <manifest>
        <attribute name="Main-Class" value="net.minecraft.bootstrap.Bootstrap"/>
      </manifest>
      <zipgroupfileset dir="${lib}"/>
    </jar>
  </target>

  <target name="clean" description="clean up" >
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>
